{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/admin.html",
      "has": [
        {
          "type": "host",
          "value": "admin.bustime.site"
        }
      ]
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}
